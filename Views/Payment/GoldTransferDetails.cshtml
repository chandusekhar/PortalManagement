
@using System.Globalization
@model List<PortalManagement.Models.Bussiness.Payment.AgencyTransaction>

<div id="page-wrapper" style="min-height: 896px;" class="payLogsData">


    <div class="table row">
        <div class="table-responsive bs-example widget-shadow">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        @if (ViewBag.IsSelling)
                        {
                            <th>Đại lý bán</th>
                        }
                        else
                        {
                            <th>Đại lý mua</th>
                        }
                        <th>Số lượng Rồng</th>
                        <th>Số lượng VNĐ</th>
                        <th>Thời gian</th>
                        @if (ViewBag.IsSelling)
                        {
                            <th>Người mua</th>
                        }
                        else
                        {
                            <th>Người bán</th>
                        }

                    </tr>
                </thead>
                <tbody>
                    @{
                        if (ViewBag.IsSelling) // dai ly ban
                        {
                            foreach (var item in Model)
                            {

                                <tr>
                                    <td>@item.ID</td>
                                    <td>@item.Sender</td>
                                    @if (item.Amount > 1000)
                                    {
                                        <td>@item.Amount.ToString("0,0", CultureInfo.CreateSpecificCulture("el-GR"))</td>
                                        <td>@((item.Amount * 0.82).ToString("0,0", CultureInfo.CreateSpecificCulture("el-GR")))</td>
                                    }
                                    else
                                    {
                                        <td>@item.Amount</td>
                                        <td>@(item.Amount * 0.82)</td>
                                    }

                                    <td>@item.CreatedTime.ToString("dd/MM/yyyy hh:mm:ss")</td>
                                    <td>@item.Recv</td>
                                </tr>
                            }
                        }
                        else
                        {
                            foreach (var item in Model) // dai ly mua
                            {

                                <tr>
                                    <td>@item.ID</td>
                                    <td>@item.Recv</td>
                                    @if (item.Amount > 1000)
                                    {
                                        <td>@item.Amount.ToString("0,0", CultureInfo.CreateSpecificCulture("el-GR"))</td>
                                        <td>@((item.Amount * 0.82).ToString("0,0", CultureInfo.CreateSpecificCulture("el-GR")))</td>
                                    }
                                    else
                                    {
                                        <td>@item.Amount</td>
                                        <td>@(item.Amount * 0.82)</td>
                                    }

                                    <td>@item.CreatedTime.ToString("dd/MM/yyyy hh:mm:ss")</td>
                                    <td>@item.Sender</td>
                                </tr>
                            }
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>

