<script src="~/Scripts/apps/Game/searchPlayHis.js"></script>
<div id="page-wrapper" style="min-height: 896px;" ng-controller="searchPlayHis" ng-init="init()">
    <div class="main-page">
        <h2 class="title1">Tra cứu lịch sử chơi</h2>
        <div class="form-body">
            <div class="form-group">
                <label>Chọn game: </label>
                <select id="gameId">
                    <option value="11" selected>Ba cây</option>
                    <option value="21">Ba cây gà</option>
                    <option value="10">Bầu cua</option>
                    <option value="7">Cao thấp</option>
                    <option value="3">Hải vương</option>
                    <option value="2">Mafia</option>
                    <option value="4">Minipoker</option>
                    <option value="1">Nông trại</option>
                    <option value="15">Sâm đếm lá</option>
                    <option value="35">Sâm solo</option>
                    <option value="8">Tài xỉu</option>
                    <option value="9">Vua bão</option>
                    <option value="16">Xóc xóc</option>
                </select>
            </div>
            <div class="form-group">
                <label>Mã phiên: </label>
                <input type="number" placeholder="Nhập mã phiên" ng-model="sessionId" />
            </div>
            <div class="form-group">
                <button class="btn btn-primary" ng-click="search()">Tìm kiếm</button>
            </div>
        </div>

        <div class="clearfix"></div>
        <div class="table row">
            <div class="table-responsive bs-example widget-shadow">0
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Ngày tạo</th>
                            <th>Giá trị</th>
                            <th>Số dư</th>
                            <th>Loại</th>
                            <th>Mô tả</th>                            
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="x in data">
                            <td>{{x.CreatedTime | formatDate}}</td>
                            <td>{{x.Amount}}</td>
                            <td>{{x.Balance | parseMoney}}</td>
                            <td>{{x.Type == 1 ? "+" : "-"}}</td>
                            <td>{{x.Description}}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


