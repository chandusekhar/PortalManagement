<script src="~/Scripts/apps/Giftcode/gcSummary.js"></script>

<div id="page-wrapper" style="min-height: 896px;" ng-controller="gcSummary" ng-init="getSummary();">
    <div class="main-page">
        <h2 class="title1">Tổng quan Giftcode</h2>
        <div class="table row">
            <div class="table-responsive bs-example widget-shadow">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Loại</th>
                            <th>Số lượng</th>
                            <th>Số tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="x in summary">
                            <th>{{x.TypeStr}}</th>
                            <td>{{x.Count | parseMoney}}</td>
                            <td>{{x.TotalAmount | parseMoney}}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>