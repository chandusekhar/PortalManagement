
@{
    Layout = null;
}

<!DOCTYPE HTML>
<html>
<head>
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/css/style.css" rel="stylesheet" />
    <style>
        html, body {
            background: #171515
        }
    </style>
</head>
<body>
    <div class="main-content">
        <div id="page-wrapper">
            <div class="main-page login-page ">
                <h2 class="title1">Đăng nhập hệ thống</h2>
                <div class="widget-shadow">
                    <div class="login-body">
                        <form action="@Url.Action("Index", "Login")" method="post">
                            <input type="text" class="user" name="user" placeholder="Nhập tên tài khoản" required="">
                            <input type="password" name="password" class="lock" placeholder="Nhập mật khẩu" required="">
                            <div class="forgot-grid">
                                <div class="clearfix"> </div>
                            </div>
                            <input type="submit" name="Sign In" value="Đăng nhập">
                        </form>
                    </div>
                </div>

            </div>
        </div>

    </div>

    <script src="~/Content/js/vendors/jquery-1.11.1.min.js"></script>
    <script src="~/Content/js/vendors/bootstrap.js"></script>
</body>
</html>